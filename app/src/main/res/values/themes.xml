<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.ForkLore" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colors -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>

        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorSurfaceVariant">@color/color_surface_variant</item>

        <item name="colorOutline">@color/color_outline</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/color_surface</item>
        <item name="android:navigationBarColor">@color/color_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Component defaults (defined in styles.xml) -->
        <item name="materialCardViewStyle">@style/Widget.ForkLore.Card.Elevated</item>
        <item name="materialButtonStyle">@style/Widget.ForkLore.Button.Filled</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.ForkLore.Button.Outlined</item>
        <item name="textInputStyle">@style/Widget.ForkLore.TextInputLayout</item>
    </style>

    <style name="Theme.ForkLore" parent="Base.Theme.ForkLore" />

</resources>